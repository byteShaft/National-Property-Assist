<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    xmlns:app="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        app:cardUseCompatPadding="true"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_address"
                android:text="Address"
                android:background="@drawable/address_border"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="4dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_age_of_property"
                android:layout_below="@+id/tv_address"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:text="Age of Property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_postcode"
                android:text="Post code"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_below="@+id/tv_age_of_property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_type_of_property"
                android:text="Type of Property"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_postcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_residential"
                android:text="Residential / Commercial"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/tv_type_of_property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </ScrollView>
</RelativeLayout>
