<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/drain_assist_for_package" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/image_view"
            android:background="#F76C30" />

        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/header_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F76C30"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/header_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/header_start"
                android:textColor="#1483C8"
                android:textSize="20sp" />
        </RelativeLayout>

</LinearLayout>
